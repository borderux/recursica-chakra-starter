{
  "components": {
    "button": {
      "styles": {
        "display": "inline-flex",
        "appearance": "none",
        "align-items": "center",
        "justify-content": "center",
        "transition": "all 250ms",
        "user-select": "none",
        "position": "relative",
        "white-space": "nowrap",
        "vertical-align": "middle",
        "outline": "none",
        "width": "auto",
        "line-height": "1.2",
        "border-radius": "0.375rem",
        "font-weight": "600",
        "height": "2.5rem",
        "min-width": "2.5rem",
        "font-size": "16px",
        "padding-left": "1rem",
        "padding-right": "1rem",
        "background": "{theme.colors.button}"
      }
    },
    "variants": {
      "properties": {
        "size": "md,sm,xs,lg",
        "ghost": "false,true",
        "outline": "false,true",
        "solid": "false,true",
        "link": "false,true",
        "hover": "false,true",
        "active": "false,true",
        "disabled": "false,true"
      },
      "rules": {
        "size=sm": {
          "height": "2rem",
          "min-width": "2rem",
          "font-size": "16px",
          "padding-left": "0.75rem",
          "padding-right": "0.75rem"
        },
        "size=xs": {
          "height": "1.5rem",
          "min-width": "1.5rem",
          "font-size": "12px",
          "padding-left": "0.5rem",
          "padding-right": "0.5rem"
        },
        "size=lg": {
          "height": "3rem",
          "min-width": "3rem",
          "font-size": "18px",
          "padding-left": "1.5rem",
          "padding-right": "1.5rem"
        },
        "focus=true": {
          "box-shadow": "outline"
        },
        "disabled=true": {
          "opacity": "0.4",
          "cursor": "not-allowed",
          "box-shadow": "none"
        },
        "hover=true,disabled=true": {
          "background": "initial"
        },
        "link=true": {
          "padding": 0,
          "height": "auto",
          "line-height": "normal",
          "vertical-align": "baseline",
          "color": "{theme.color.link}"
        },
        "solid=true": {},
        ""
      },
      "variations": {
        "link=true,hover=true": {
          "text-decoration": "underline"
        },
        "link=true,hover=true,disabled=true": {
          "text-decoration": "none"
        },
        "link=true,active=true": {
          "color": ""
        },
      }
    }
  }
}
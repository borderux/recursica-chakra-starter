{
  "components": {
    "button": {
      "variants": {
        "rules": {
          "variant=link": {
            "styles": {
              "padding": 0,
              "height": "auto",
              "line-height": "normal",
              "vertical-align": "baseline",
              "color": "{theme.colors.blue-500}",
              "background": "transparent"
            }
          }
        },
        "variations": {
          "variant=link,hover=true": {
            "styles": {
              "text-decoration": "underline"
            }
          },
          "variant=link,hover=true,disabled=true": {
            "styles": {
              "text-decoration": "none"
            }
          },
          "variant=link,active=true,hover=true": {
            "styles": {
              "color": "{theme.colors.blue-700}",
              "text-decoration": "underline"
            }
          },
          "variant=link,active=true,hover=true,disabled=true": {
            "styles": {
              "color": "{theme.colors.blue-700}",
              "text-decoration": "none"
            }
          }
        }
      }
    }
  }
}

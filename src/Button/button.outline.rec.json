{
  "components": {
    "button": {
      "variants": {
        "rules": {
          "variant=outline": {
            "styles": {
              "border": "1px solid",
              "border-color": "{theme.colors.blue-600}",
              "background": "transparent",
              "color": "{theme.colors.blue-600}"
            }
          }
        },
        "variations": {
          "variant=outline,hover=true": {
            "styles": {
              "background": "{theme.colors.blue-50}"
            }
          },
          "variant=outline,active=true": {
            "styles": {
              "background": "{theme.colors.blue-100}"
            }
          }
        }
      }
    }
  }
}

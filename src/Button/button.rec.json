{
  "components": {
    "button": {
      "styles": {
        "display": "inline-flex",
        "appearance": "none",
        "align-items": "center",
        "justify-content": "center",
        "transition": "all 250ms",
        "user-select": "none",
        "position": "relative",
        "white-space": "nowrap",
        "vertical-align": "middle",
        "outline": "none",
        "width": "auto",
        "font-weight": "600",
        "color": "{theme.colors.gray800}",
        "border-radius": "0.25rem",
        "line-height": "1.2rem"
      },
      "children": {
        "leftIcon": {
          "name": "Left Icon",
          "inherits": "{icons.EmailIcon}",
          "styles": {
            "display": "none",
            "height": "1em",
            "width": "1em",
            "margin-left": "-0.25rem",
            "margin-right": "0.5rem",
            "vertical-align": "middle",
            "flex-shrink": "0",
            "backface-visibility": "hidden"
          }
        },
        "spinner": {
          "name": "Spinner",
          "inherits": "{icons.SpinnerIcon}",
          "styles": {
            "display": "none",
            "height": "1em",
            "width": "1em"
          }
        },
        "label": {
          "name": "Label",
          "label": "Button"
        },
        "loadingText": {
          "name": "Loading Text",
          "label": " ",
          "styles": {
            "display": "none"
          }
        },
        "rightIcon": {
          "name": "Right Icon",
          "inherits": "{icons.SearchIcon}",
          "styles": {
            "display": "none",
            "height": "1em",
            "width": "1em",
            "margin-right": "-0.25rem",
            "margin-left": "0.5rem",
            "vertical-align": "middle",
            "flex-shrink": "0",
            "backface-visibility": "hidden"
          }
        }
      }
    }
  },
  "imports": ["button.properties.rec.json", "button.rules.rec.json", "button.variations.rec.json", "button.disallowed.rec.json"]
}

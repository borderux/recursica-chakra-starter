{
  "components": {
    "button": {
      "styles": {
        "display": "inline-flex",
        "appearance": "none",
        "align-items": "center",
        "justify-content": "center",
        "transition": "all 250ms ease 0s",
        "user-select": "none",
        "position": "relative",
        "outline": "none",
        "width": "auto",
        "line-height": "1.2",
        "border-radius": "0.375rem",
        "height": "2.5rem",
        "min-width": "2.5rem",
        "font-size": "1rem",
        "padding-left": "1rem",
        "padding-right": "1rem",
        "background": "{theme.colors.gray500}",
        "color": "{theme.colors.white}",
        "white-space": "nowrap",
        "vertical-align": "middle",
        "border": "none",
        "cursor": "pointer"
      },
      "children": {
        "leftIcon": {
          "name": "Left Icon",
          "inherits": "{icons.menu}",
          "styles": {
            "display": "none",
            "fill": "{theme.colors.white}",
            "height": "1em",
            "width": "1em"
          }
        },
        "spinner": {
          "name": "Spinner",
          "inherits": "{icons.search}",
          "styles": {
            "display": "none",
            "fill": "{theme.colors.white}",
            "height": "1em",
            "width": "1em"
          }
        },
        "label": {
          "name": "Label",
          "label": "Button"
        },
        "loadingText": {
          "name": "Loading Text",
          "label": " ",
          "styles": {
            "display": "none"
          }
        },
        "rightIcon": {
          "name": "Right Icon",
          "inherits": "{icons.menu}",
          "styles": {
            "display": "none",
            "fill": "{theme.colors.white}",
            "height": "1em",
            "width": "1em"
          }
        }
      }
    }
  },
  "imports": ["button.properties.rec.json", "button.rules.rec.json", "button.variations.rec.json", "button.disallowed.rec.json"]
}

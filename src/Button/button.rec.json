{
  "components": {
    "button": {
      "styles": {
        "display": "inline-flex",
        "appearance": "none",
        "align-items": "center",
        "justify-content": "center",
        "transition": "all 250ms ease 0s",
        "user-select": "none",
        "position": "relative",
        "outline": "none",
        "width": "auto",
        "line-height": "1.2",
        "border-radius": "0.375rem",
        "font-weight": "600",
        "height": "2.5rem",
        "min-width": "2.5rem",
        "font-size": "1rem",
        "padding-left": "1rem",
        "padding-right": "1rem",
        "background": "{theme.colors.blue-500}",
        "color": "{theme.colors.white}",
        "white-space": "nowrap",
        "vertical-align": "middle",
        "border": "none",
        "cursor": "pointer"
      },
      "children": {
        "buttonContent": {
          "name": "Button Content",
          "inherits": "{components.buttonContent}",
          "styles": {
            "color": "{theme.colors.white}"
          }
        }
      }
    }
  },
  "imports": ["button.properties.rec.json", "button.rules.rec.json", "button.variations.rec.json"]
}

{
    "components": {
        "button": {
            "variants": {
                "rules": {
                    "hover=true": {
                        "styles": {
                            "background": "{theme.colors.blue-600}"
                        }
                    },
                    "active=true": {
                        "styles": {
                            "background": "{theme.colors.blue-700}"
                        }
                    },
                    "size=sm": {
                        "styles": {
                            "height": "2rem",
                            "min-width": "2rem",
                            "font-size": "0.875rem",
                            "padding-left": "0.75rem",
                            "padding-right": "0.75rem"
                        }
                    },
                    "size=xs": {
                        "styles": {
                            "height": "1.5rem",
                            "min-width": "1.5rem",
                            "font-size": "0.75rem",
                            "padding-left": "0.5rem",
                            "padding-right": "0.5rem"
                        }
                    },
                    "size=lg": {
                        "styles": {
                            "height": "3rem",
                            "min-width": "3rem",
                            "font-size": "1.125rem",
                            "padding-left": "1.5rem",
                            "padding-right": "1.5rem"
                        }
                    },
                    "disabled=true": {
                        "styles": {
                            "opacity": "0.4",
                            "cursor": "not-allowed",
                            "box-shadow": "none"
                        }
                    },
                    "variant=unstyled": {
                        "styles": {
                            "display": "inline",
                            "background": "none",
                            "color": "inherit",
                            "line-height": "inherit",
                            "padding": 0,
                            "margin": 0
                        }
                    },
                    "variant=outline": {
                        "styles": {
                            "border": "1px solid",
                            "border-color": "{theme.colors.blue-600}",
                            "background": "transparent",
                            "color": "{theme.colors.blue-600}"
                        }
                    },
                    "variant=link": {
                        "styles": {
                            "padding": 0,
                            "height": "auto",
                            "line-height": "normal",
                            "vertical-align": "baseline",
                            "color": "{theme.colors.blue-500}",
                            "background": "transparent"
                        }
                    },
                    "variant=ghost": {
                        "styles": {
                            "background": "transparent",
                            "color": "{theme.colors.blue-600}"
                        }
                    },
                    "isLoading=true": {
                        "styles": {
                            "opacity": "0.4"
                        }
                    }
                }
            }
        }
    }
}